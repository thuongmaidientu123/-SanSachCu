@model web1._0.Models.Sach



<div class="BookinList">
    <div class="Image">
        <img class="img-thumbnail" src="@Model.hinhanh" />
    </div>
    <div class="Info">
        <h3>@Model.ten</h3>
        <br />
        <br />
        <table>
            <tr>
                <td><b>Tác giả:</b></td>
                <td>@Model.TacGia.tentacgia</td>
            </tr>
            <tr>
                <td><b>Nhà xuất bản:</b></td>
                <td>@Model.NhaXuatBan.tennhaxuatban</td>
            </tr>
            <tr>
                <td><b>Thể loại:</b></td>
                <td>@Model.TheLoai.tenloaisach</td>
            </tr>

            <tr>
                <td><b>Giá: </b></td>
                <td>@Model.gia đ</td>
            </tr>
            <tr>
                <td></td>
                @using (Html.BeginForm("Index", "Mua",new {@Model.ma}))
                {
                    <td><input class="btn-primary" value="Dat Mua" type="submit" onclick="location.href='@Url.Action("Index", "Mua")'"/></td>
                }
               
               
            </tr>
            @Model.ngaydang
        </table>
       
    </div>
    

</div>



