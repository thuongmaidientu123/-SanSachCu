
@{
    ViewBag.Title = "VanHocNuocNgoai";
    Layout = "~/Views/Shared/_Template.cshtml";
}

@model IEnumerable<web1._0.Models.Sach>



@for (int i = 0; i < Model.Count(); i++)
{
    @Html.Partial("_BookInList", Model.ElementAt(i))
}


@if (ViewBag.totalPage > 1)
{
    var pageDisplay = (int)(ViewBag.MaxPage);
    int totalPage = (int)(ViewBag.TotalPage);
    int currentPage = ((int)ViewBag.Page);


    var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
    var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);


    <ul class="pagination">
        @if (currentPage > ViewBag.First)
        {
        <li><a href="?page=@ViewBag.First" title="Trang đầu" class="first"><i class="fa fa-angle-double-left"></i></a></li>
        <li>
            <a href="?page=@ViewBag.Prev" title="Trang trước" class="prev"><i class="fa fa-angle-left"></i></a>
        </li>

        }
        @for (int i = startPageIndex; i <= endPageIndex; i++)
        {
            if (currentPage == i)
            {

            <li> <a href="?page=@i" class="active" title="Trang @i">@i</a></li>
            }
            else
            {
            <li><a href="?page=@i" title="Trang @i" class="pos">@i</a></li>
            }
        }
        @if (currentPage < totalPage)
        {
        <li><a href="?page=@ViewBag.Next" class="next" title="Trang sau"><i class="fa fa-angle-right"></i></a></li>
        <li> <a href="?page=@ViewBag.Last" class="last" title="Trang cuối"><i class="fa fa-angle-double-right"></i></a></li>
        }

    </ul>

}

else
{
    <span> khong co ban ghi nao</span>
}

